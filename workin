#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <Windows.h>

#define CLS system("cls")
#define PAUSE system("pause")
#define GAMES 100
#define SCORE 2
#define TOPTEN 10

/////////////////////////////	Prototyping Start
void clearBoard(char board[10][10]);
